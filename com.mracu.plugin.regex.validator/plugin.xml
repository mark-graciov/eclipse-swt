<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.mracu.plugin.regex.validator.regexcategory"
            name="Regex Validator">
      </category>
      <view
            category="com.mracu.plugin.regex.validator.regexcategory"
            class="com.mracu.plugin.regex.validator.RegexValidatorView"
            icon="res/icons/regexBomb.png"
            id="com.mracu.plugin.regex.validator.regexview"
            name="Regex Validator">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            category="com.mracu.plugin.regex.validator.regexCategory"
            defaultHandler="com.mracu.plugin.regex.validator.RegexValidatorHandler"
            id="com.mracu.plugin.regex.validator.RegexValidator"
            name="RegexValidator">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="regexValidator"
               label="RegexValidator">
            <command
                  commandId="com.mracu.plugin.regex.validator.RegexValidator"
                  icon="res/icons/regexBomb.png"
                  label="RegexValidator"
                  style="push"
                  tooltip="Validate the expression">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="com.mracu.plugin.regex.validator.validatorToolbar">
            <command
                  commandId="com.mracu.plugin.regex.validator.RegexValidator"
                  icon="bin/icons/regexBomb.png"
                  label="RegexValidator"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         id="id1"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.mracu.plugin.regex.validator.PerspectiveFactory1"
            id="com.mracu.plugin.regex.validator.perspective1"
            name="name">
      </perspective>
   </extension>

</plugin>
